#!/bin/sh

# temporary setup script, should be improved

# checking for the GLOBUS_LOCATION

if test "x$GLOBUS_LOCATION" = "x"; then
    echo "ERROR Please specify GLOBUS_LOCATION" >&2
    exit 1
fi

. $GLOBUS_LOCATION/libexec/globus-sh-tools.sh

if test "x$GLOBUS_PERL" = "x"; then
    echo "ERROR Please specify GLOBUS_PERL" >&2
    exit 1
fi

PERL="$GLOBUS_PERL"

for i in $GLOBUS_LOCATION/test/globus_common*.pl \
         $GLOBUS_LOCATION/test/run-common-tests.pl; do
	cat $i|sed "s,perl,$PERL," > $i.tmp
	mv $i.tmp $i
	chmod a+x $i
done
