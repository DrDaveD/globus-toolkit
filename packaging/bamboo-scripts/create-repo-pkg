#! /bin/sh

baseurl="http://www.globus.org/ftppub/\$majorglobusversion/\$globusversion/\$fullglobusversion/packages/rpm/\$osname/\\\$releasever"

if [ -f "../fait_accompli/version" ]; then
    fullglobusversion="$(cat $bambooscriptdir/../fait_accompli/version)"
    globusversion="${fullglobusversion%.*}"
    majorglobusversion="gt${globusversion%.*}"
else
    majorglobusversion="gt5"
    globusversion="5.2"
    fullglobusversion="stable"
fi

sign=1
reponame=Globus-repo-config
while getopts "n:v:b:r:SUts" i; do
    case "$i" in
        n)
            osname="$OPTARG"
            ;;
        v)
            osver="$OPTARG"
            ;;
        b)
            baseurl="$OPTARG"
            ;;
        r)
            reponame="$OPTARG"
            ;;
        S)
            sign=0
            ;;
        U)
            no_updates="yes"
            ;;
        t)
            fullglobusversion="testing"
            ;;
        s)
            fullglobusversion="stable"
            ;;
    esac
done

if [ "$osname" = "" ]; then
    osname="$(lsb_release -is | tr 'A-Z' 'a-z')"
fi
if [ "$osver" = "" ]; then
    osver="$(lsb_release -rs)"
fi

updatebaseurl="$(echo "$baseurl" | sed -e "s/packages/updates/")"

if [ "$osname" = "" -o "$osver" = "" ]; then
    echo "Usage: $0 -n OSNAME -v OSVER [-b baseurl] [-r repopkgname]" 1>&2
    exit 1
fi

if [ "$osname" = "sles" ]; then
    baseurlresolved="$(eval echo $baseurl)"
    updatebaseurlresolved="$(eval echo $updatebaseurl)"
else
    baseurlresolved="$(eval echo $baseurl)/\$basearch/"
    srcbaseurlresolved="$(eval echo $baseurl)/SRPMS"
    updatebaseurlresolved="$(eval echo $updatebaseurl)/\$basearch"
    updatesrcbaseurlresolved="$(eval echo $updatebaseurl)/SRPMS"
fi

for x in BUILD BUILDROOT RPMS SOURCES SPECS SRPMS; do
    mkdir -p ${HOME}/rpmbuild/${x}
done

if [ "$osname" = "sles" ]; then
    typeline="type=yast2"
else
    typeline="priority=98"
fi
echo "Creating $HOME/rpmbuild/SOURCES/${reponame}.$osname.repo"
cat <<EOF > $HOME/rpmbuild/SOURCES/${reponame}.$osname.repo
[Globus]
name=Globus
baseurl=$baseurlresolved
failovermethod=priority
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-Globus
$typeline
EOF

if [ "$osname" != "sles" ]; then
    cat <<EOF >> $HOME/rpmbuild/SOURCES/${reponame}.$osname.repo
[Globus-source]
name=Globus - Source
baseurl=$srcbaseurlresolved
failovermethod=priority
enabled=0
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-Globus
$typeline
EOF
fi

if [ "$no_updates" != "yes" ]; then
    cat <<EOF >> $HOME/rpmbuild/SOURCES/${reponame}.$osname.repo

[Globus-Updates]
name=Globus - Updates
baseurl=$updatebaseurlresolved
failovermethod=priority
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-Globus
$typeline
EOF
    if [ "$osname" != "sles" ]; then
    cat <<EOF >> $HOME/rpmbuild/SOURCES/${reponame}.$osname.repo

[Globus-Updates-source]
name=Globus - Updates Source
baseurl=$updatesrcbaseurlresolved
failovermethod=priority
enabled=0
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-Globus
$typeline
EOF
    fi
fi

curl -Ls http://builds.globus.org/repo52/etc/GLOBUS-KEY \
    > "${HOME}/rpmbuild/SOURCES/RPM-GPG-KEY-Globus" 

echo "Creating $HOME/rpmbuild/SPECS/$reponame.$osname.spec"
cat <<EOF > $HOME/rpmbuild/SPECS/$reponame.$osname.spec
Name:           $reponame.$osname
Version:        $osver
Release:        2
Summary:        Globus Repository Configuration
Group:          System Environment/Base
License:        ASL 2.0
URL:            http://globus.org
Source0:        RPM-GPG-KEY-Globus
Source1:        $reponame.$osname.repo
BuildRoot:      %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
BuildArch:      noarch
Requires:       ${osname}-release >= ${osver}
%if %{?rhel}%{!?rhel:0} == 5
Requires:       yum-priorities
%else
%if %{?suse_version}%{!?suse_version:0} == 0
Requires:       yum-plugin-priorities
%endif
%endif

%description
This package installs the Globus yum repository configuration and GPG key.

%prep
%setup -c -T

%build

%install
rm -rf \$RPM_BUILD_ROOT

# gpg
install -Dpm 644 %{SOURCE0} \
  \$RPM_BUILD_ROOT%{_sysconfdir}/pki/rpm-gpg/RPM-GPG-KEY-Globus

%if 0%{?suse_version} > 0
# yast2
install -dm 755 \$RPM_BUILD_ROOT%{_sysconfdir}/zypp/repos.d
install -pm 644 %{SOURCE1} \
  \$RPM_BUILD_ROOT%{_sysconfdir}/zypp/repos.d
%else
# yum
install -dm 755 \$RPM_BUILD_ROOT%{_sysconfdir}/yum.repos.d
install -pm 644 %{SOURCE1} \
  \$RPM_BUILD_ROOT%{_sysconfdir}/yum.repos.d
%endif

%clean
rm -rf \$RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
%{_sysconfdir}/pki/rpm-gpg/*
%if 0%{?suse_version} > 0
%config %{_sysconfdir}/zypp/repos.d/*
%else
%config %{_sysconfdir}/yum.repos.d/*
%endif
EOF

rpmbuild -ba $HOME/rpmbuild/SPECS/$reponame.$osname.spec
if [ $sign -eq 1 ]; then
    expect ${bambooscriptdir}/sign-rpm $HOME/rpmbuild/SRPMS/${reponame}.$osname*rpm
    expect ${bambooscriptdir}/sign-rpm $HOME/rpmbuild/RPMS/noarch/${reponame}.$osname*rpm
fi
