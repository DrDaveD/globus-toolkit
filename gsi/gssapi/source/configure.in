dnl

AC_REVISION($Revision$)
AC_INIT(Makefile.am)

GLOBUS_INIT

AM_PROG_LIBTOOL

dnl config header goes here

dnl Initialize the automake rules the last argument
AM_INIT_AUTOMAKE($GPT_NAME, $GPT_VERSION, 0)

globus_authorization="yes"
AC_ARG_ENABLE(globus-authorization,
[  --enable-globus-authorization	Enable experimental cas authorization],
[
	globus_authorization=$enableval
])

if test $globus_authorization = "yes"; then
	GPT_PKG_CFLAGS="-DGLOBUS_AUTHORIZATION -D_HAVE_GSI_EXTENDED_GSSAPI"
else
	GPT_PKG_CFLAGS=
fi
AC_SUBST(GPT_PKG_CFLAGS)

GLOBUS_FINALIZE

LAC_DOXYGEN(["../library"])

AC_OUTPUT(
	Makefile
        version.h
	pkgdata/Makefile
	pkgdata/pkg_data_src.gpt
	doxygen/Makefile
        doxygen/Doxyfile
        doxygen/Doxyfile-internal
        library/Makefile
)

