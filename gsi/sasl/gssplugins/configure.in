AC_REVISION($Revision$)
AC_INIT(Makefile.am)

GLOBUS_INIT

AM_PROG_LIBTOOL

dnl config header goes here

dnl Initialize the automake rules the last argument
AM_INIT_AUTOMAKE($GPT_NAME, $GPT_VERSION)

AM_CONFIG_HEADER(config.h)

LAC_DOXYGEN([" ../ "])


CPPFLAGS="$CPPFLAGS $GPT_INCLUDES"

AC_DEFINE(HAVE_GSSAPI_H)

AC_ARG_WITH(name,
        [ --with-name=<FL>     Specify a plugin name ie. <name>-GSSAPI  ],

        [
        case $withval in
        no)
                echo "Please specify a name" >&2
                exit 1
                ;;
        yes)
                echo "Please specify a name" >&2
                exit 1
                ;;
        *)
                $srcdir/mkgssname -n $withval gssplugin > $srcdir/gssname.c
                ;;
        esac
        ]
)
 


GLOBUS_FINALIZE

AC_OUTPUT(
	Makefile
	pkgdata/Makefile
	pkgdata/pkg_data_src.gpt
	doxygen/Makefile
	doxygen/Doxyfile
	doxygen/Doxyfile-internal
)
