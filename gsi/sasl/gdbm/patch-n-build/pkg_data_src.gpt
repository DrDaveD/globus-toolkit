<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gpt_package_metadata SYSTEM "globus_package.dtd">

<gpt_package_metadata Format_Version="0.01" Name="globus_libtool" >

  <Aging_Version Age="0" Major="0" Minor="1" />
  <Description> Globus binary package for libtool </Description>
  <Functional_Group >MDS</Functional_Group>
  <Version_Stability Release="alpha" />

  <src_pkg >

    <Build_Environment >
      <cflags ></cflags>
      <external_includes ></external_includes>
      <pkg_libs >-lltdl_$GLOBUS_FLAVOR_NAME</pkg_libs>
      <external_libs ></external_libs>
    </Build_Environment>

    <With_Flavors build="yes" />

    <Version_Label>1.4</Version_Label>

    <Build_Instructions>

      <Build_Step>MAKE_GPTMACRO distclean</Build_Step>
      <Build_Step Macro_Args="libs='ltdl'">RUN_FLAVOR_MAKEFILES_GPTMACRO</Build_Step>
      <Build_Step>CONFIGENV_GPTMACRO ./configure --prefix=INSTALLDIR_GPTMACRO</Build_Step>
      <Build_Step>MAKE_GPTMACRO</Build_Step>
      <Build_Step>MAKE_GPTMACRO DESTDIR_GPTMACRO install</Build_Step>
      <Build_Step>RUN_FLAVOR_INSTALL_GPTMACRO</Build_Step>

    </Build_Instructions>

  </src_pkg >

</gpt_package_metadata>
