AC_REVISION($Revision$)
AC_INIT(grid-security-config.in)

# checking for the GLOBUS_LOCATION

if test "x$GLOBUS_LOCATION" = "x"; then
    echo "ERROR Please specify GLOBUS_LOCATION" >&2
    exit 1
fi

prefix='$(GLOBUS_LOCATION)'
exec_prefix='$(GLOBUS_LOCATION)'

. $GLOBUS_LOCATION/libexec/globus-sh-tools.sh

if test "x$GLOBUS_SH" = "x"; then
    echo "ERROR Please specify GLOBUS_SH" >&2
    exit 1
fi

SH="$GLOBUS_SH"

AC_SUBST(SH)

AC_OUTPUT(
	grid-cert-request-config
	grid-security-config
)

