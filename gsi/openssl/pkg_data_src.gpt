<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gpt_package_metadata SYSTEM "package.dtd">

<gpt_package_metadata Format_Version="0.01" Name="globus_openssl" >

  <Aging_Version Age="0" Major="0" Minor="1" />

  <Description> Globus binary package of openssl </Description>
  <Version_Stability Release="alpha"/>

  <src_pkg >

    <Build_Environment >
      <cflags ></cflags>
      <external_includes ></external_includes>
      <pkg_libs >-lssl_$GLOBUS_FLAVOR_NAME -lcrypto_$GLOBUS_FLAVOR_NAME</pkg_libs>
      <external_libs ></external_libs>
    </Build_Environment>

    <With_Flavors build="yes" />

    <Version_Label>0.9.6a</Version_Label>

    <Build_Instructions>

      <Build_Step>patch -N -p1 -i ../patches/openssl-0.9.6a-patch</Build_Step>

      <Build_Step>MAKE_GPTMACRO clean</Build_Step>

      <Build_Step Macro_Args="libs='ssl crypto sasl' regex='lib$${i}FLAVOR'">RUN_FLAVOR_MAKEFILES_GPTMACRO</Build_Step>

      <Build_Step>./config --prefix=INSTALLDIR_GPTMACRO threads shared</Build_Step>

      <Build_Step>MAKE_GPTMACRO</Build_Step>

      <Build_Step>MAKE_GPTMACRO DESTDIR_GPTMACRO install</Build_Step>

      <Build_Step>RUN_FLAVOR_INSTALL_GPTMACRO</Build_Step>

    </Build_Instructions>

  </src_pkg >

</gpt_package_metadata>
