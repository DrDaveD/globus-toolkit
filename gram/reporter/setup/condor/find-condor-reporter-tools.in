AC_INIT(globus-script-condor-queue.in)

# checking for the GLOBUS_LOCATION

if test "x$GLOBUS_LOCATION" = "x"; then
    echo "ERROR Please specify GLOBUS_LOCATION" >&2
    exit 1
fi

AC_PATH_PROG(CONDOR_Q, condor_q, no)
if test "$CONDOR_Q" = "no" ; then
    AC_MSG_ERROR("Cannot locate condor_q")
fi

AC_PATH_PROG(CONDOR_STATUS, condor_status, no)
if test "$CONDOR_STATUS" = "no" ; then
    AC_MSG_ERROR("Cannot locate condor_status")
fi

AC_OUTPUT( $GLOBUS_LOCATION/libexec/globus-script-condor-queue:globus-script-condor-queue.in )
