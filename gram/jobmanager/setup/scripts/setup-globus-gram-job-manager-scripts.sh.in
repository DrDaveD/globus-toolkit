AC_REVISION($Revision$)
AC_INIT(globus-gram-job-manager-tools.sh.in)

# checking for the GLOBUS_LOCATION

if test "x$GLOBUS_LOCATION" = "x"; then
    echo "ERROR Please specify GLOBUS_LOCATION" >&2
    exit 1
fi

prefix='$(GLOBUS_LOCATION)'
exec_prefix='$(GLOBUS_LOCATION)'

if test "x$PERL" = "x"; then
    AC_PATH_PROG(PERL,perl)
fi

LAC_CONDOR_PROGS
LAC_EASYMCS_PROGS
LAC_GLUNIX_PROGS
LAC_LOADLEVELER_PROGS
LAC_LSF_PROGS
LAC_PBS_PROGS
LAC_NQE_PROGS
LAC_GRD_PROGS
LAC_PEXEC_PROGS
LAC_PRUN_PROGS

AC_OUTPUT($GLOBUS_LOCATION/libexec/globus-gram-job-manager-tools.sh:globus-gram-job-manager-tools.sh.in)
