<?xml version="1.0" encoding="UTF-8"?>
<rsl:rsl    xmlns:rsl="http://www.globus.org/namespaces/2004/02/rsl" 
            xmlns:enum="http://www.globus.org/namespaces/2004/02/rsl/enum"
            xmlns:gram="http://www.globus.org/namespaces/2004/02/rsl/gram"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="
                http://www.globus.org/namespaces/2004/02/rsl
                /sandbox/lane/globus/schema/base/gram/rsl.xsd
                http://www.globus.org/namespaces/2004/02/rsl/gram
                /sandbox/lane/globus/schema/base/gram/gram_rsl.xsd">
<gram:job>
    <gram:executable> <rsl:path>
        <rsl:substitutionRef name="GLOBUS_LOCATION"/>
        <rsl:stringElement value="/bin/managed-job-globusrun"/> </rsl:path>
    </gram:executable>
    <gram:environment>
        <rsl:hashtable>
            <rsl:entry name="PATH">
                <rsl:stringElement value="/usr/java/j2sdk1.4.2/bin"/>
            </rsl:entry>
        </rsl:hashtable>
    </gram:environment>
    <gram:arguments>
        <rsl:stringArray>
            <rsl:string>
                <rsl:stringElement value="-factory"/>
            </rsl:string>
            <rsl:string>
                <rsl:stringElement value="140.221.36.12:31415"/>
            </rsl:string>
            <rsl:string>
                <rsl:stringElement value="-file"/>
            </rsl:string>
            <rsl:string>
                <rsl:substitutionRef name="HOME"/>
                <rsl:stringElement value="/Testing/echo.xml"/>
            </rsl:string>
        </rsl:stringArray>
    </gram:arguments>
    <gram:stdout>
        <rsl:pathArray> <rsl:path>
            <rsl:stringElement value="/home/lane/Testing/logs/echo-test.stdout"/>
        </rsl:path> </rsl:pathArray>
    </gram:stdout>
    <gram:stderr>
        <rsl:pathArray> <rsl:path>
            <rsl:stringElement value="/home/lane/Testing/logs/echo-test.stderr"/>
        </rsl:path> </rsl:pathArray>
    </gram:stderr>
    <!--
    <gram:jobType>
        <enum:enumeration>
            <enum:enumerationValue> <enum:multiple/> </enum:enumerationValue>
        </enum:enumeration>
    </gram:jobType>
    -->
</gram:job>
</rsl:rsl>
