@GLOBUS_PERL_INITIALIZER@

use strict;
use warnings;

require Grid::GPT::Setup;
use Globus::Core::Paths;
use Getopt::Long;
use File::Copy;

my $path                = '';
my $help		= 0;

GetOptions('path|p=s' => \$path,
	   'help|h' => \$help);

&usage if $help;

if ($path ne '') {
    system("./find-lsf-logs --with-log-path=$path");
} else {
    system("./find-lsf-logs");
}

if ($? != 0)
{
    exit $?;
}

copy('globus-lsf.conf', "$Globus::Core::Paths::sysconfdir/globus-lsf.conf");

my $metadata =
    new Grid::GPT::Setup(package_name =>
            'globus_scheduler_event_generator_lsf_setup');

my $libexecdir	= $Globus::Core::Paths::libexecdir;

$metadata->finish();

sub usage
{
    print "Usage: $0 [options]\n".
          "Options:  [--path|-p path to PBS server log]\n".
	  "          [--help|-h]\n".
          " default path is /var/spool/lsf/server_logs\n";
    exit 1;
}
